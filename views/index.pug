extends layout

block content
  h1= title
  p Welcome to #{title}

  // register form
  form(method='POST' action='/insert')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder="name" name='name')
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='email', placeholder='email@email.com' name='email')
    button.btn.btn-primary(type='submit') Sign up

  - var condition = true
  if condition
    p It's true
    
  - var anyArray = [1,2,3]
  each value in anyArray
    p= value