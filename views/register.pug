extends layout

block content
    .container
        h1 Registration Form
        include ./includes/messages.pug
        form(method='post', action='/users/register')
            .form-group
                label Name
                input.form-control(type='text', name='name', placeholder='Name', required)
            .form-group
                label Username
                input.form-control(type='text', name='username', placeholder='Username', required)
            .form-group
                label Email
                input.form-control(type='email', name='email', placeholder='Email', required)
            .form-group
                label Password
                input.form-control(type='password', name='password', placeholder='Password', required)
            .form-group
                label Confirm Password
                input.form-control(type='password', name='password2', placeholder='Confirm Password', required)
            button.btn.btn-primary(type='submit') Register
            br
            |   Have An Account? 
            a.btn.btn-default.btn-sm(href='/users/login') Login Now
